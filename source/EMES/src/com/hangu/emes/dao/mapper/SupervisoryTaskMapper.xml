<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.hangu.emes.dao.mapper.SupervisoryTaskMapper">
    <!-- 查询结果映射 -->
    <resultMap id="searchResultMap" type="com.hangu.emes.entity.SupervisoryTask">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="type" column="type" />
        <result property="pollutantSourceId" column="pollutant_source_id" />
        <result property="monitorItem" column="monitor_item" />
        <result property="progress" column="progress" />
        <result property="creator" column="creator" />
        <result property="executor" column="executor" />
        <result property="status" column="status" />
        <result property="createBy" column="create_by" />
        <result property="createDate" column="create_date" />
        <result property="updateBy" column="update_by" />
        <result property="updateDate" column="update_date" />
        <result property="version" column="version" />
    </resultMap>
    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,name,type,pollutant_source_id,monitor_item,progress,creator,executor,status,create_by,create_date,update_by,update_date,version
    </sql>
    <!-- 新增记录 -->
    <insert id="insert" parameterType="com.hangu.emes.entity.SupervisoryTask">
        INSERT INTO supervisory_task (
            id ,
            name ,
            type ,
            pollutant_source_id ,
            monitor_item ,
            progress ,
            creator ,
            executor ,
            status ,
            create_by ,
            create_date ,
            update_by ,
            update_date ,
            version 
        ) VALUES (
        #{id} ,
        #{name} ,
        #{type} ,
        #{pollutantSourceId} ,
        #{monitorItem} ,
        #{progress} ,
        #{creator} ,
        #{executor} ,
        #{status} ,
        #{createBy} ,
        #{createDate} ,
        #{updateBy} ,
        #{updateDate} ,
        #{version} 
        )
    </insert>
    <!-- 单记录删除 -->
    <delete id="delete" parameterType="java.lang.String">
        delete from supervisory_task where id=#{id}
    </delete>
    <!-- 批量记录删除 -->
    <delete id="deleteByIds" parameterType="java.util.List">
        delete from supervisory_task where id in
        <foreach collection="list" item="ids" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
    <!-- 单记录更新 -->
    <update id="update" parameterType="com.hangu.emes.entity.SupervisoryTask">
        UPDATE supervisory_task
        <trim prefix="set" suffixOverrides=",">
            <if test="#{name} != null">
                name =#{name},
            </if>
            <if test="#{type} != null">
                type =#{type},
            </if>
            <if test="#{pollutantSourceId} != null">
                pollutant_source_id =#{pollutantSourceId},
            </if>
            <if test="#{monitorItem} != null">
                monitor_item =#{monitorItem},
            </if>
            <if test="#{progress} != null">
                progress =#{progress},
            </if>
            <if test="#{creator} != null">
                creator =#{creator},
            </if>
            <if test="#{executor} != null">
                executor =#{executor},
            </if>
            <if test="#{status} != null">
                status =#{status},
            </if>
            <if test="#{updateBy} != null">
                update_by =#{updateBy},
            </if>
            <if test="#{updateDate} != null">
                update_date =#{updateDate},
            </if>
            <if test="#{version} != null">
                version =#{version},
            </if>
        </trim>
        where id=#{id}
    </update>
    <!-- 查询记录BY ID -->
    <select id="getById" resultMap="searchResultMap" parameterType="java.lang.String">
        select
        <include refid="columns" />
        from
        supervisory_task where id=#{id}
    </select>
    <!-- 查询所有记录 -->
    <select id="getAll" resultMap="searchResultMap" parameterType="java.lang.String">
        select
        <include refid="columns" />
        from
        supervisory_task
    </select>

    <!-- 动态查询条件 -->
    <sql id="searchConditionSQL">
        <trim prefix="where" prefixOverrides="AND |OR ">
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="pollutantSourceId != null">
                and pollutant_source_id = #{pollutantSourceId}
            </if>
            <if test="monitorItem != null">
                and monitor_item = #{monitorItem}
            </if>
            <if test="progress != null">
                and progress = #{progress}
            </if>
            <if test="creator != null">
                and creator = #{creator}
            </if>
            <if test="executor != null">
                and executor = #{executor}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="createBy != null">
                and create_by = #{createBy}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate}
            </if>
            <if test="updateBy != null">
                and update_by = #{updateBy}
            </if>
            <if test="updateDate != null">
                and update_date = #{updateDate}
            </if>
            <if test="version != null">
                and version = #{version}
            </if>
        </trim>
    </sql>
    <select id="search" resultMap="searchResultMap" useCache="true" parameterType="com.hangu.emes.vo.searcher.SupervisoryTaskSearchCondition">
        select
        <include refid="columns" />
        from supervisory_task
        <include refid="searchConditionSQL" />
    </select>

    <select id="selectPage" resultMap="searchResultMap" useCache="true" parameterType="com.hangu.emes.vo.searcher.SupervisoryTaskSearchCondition">
        select
        <include refid="columns" />
        from supervisory_task
        <include refid="searchConditionSQL" />
    </select>
    <select id="selectPageCount" resultType="long" parameterType="com.hangu.emes.vo.searcher.SupervisoryTaskSearchCondition">
        select count(id) from supervisory_task
        <include refid="searchConditionSQL" />
    </select>
</mapper>